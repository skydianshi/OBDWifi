<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="20dp"
    android:background="#EAEAEA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1">

                <FrameLayout
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_gravity="center"
                    android:background="@mipmap/camposs_bg">
                    <com.example.obdwifi.RoundProgressBar
                        android:id="@+id/speed_roundProgressBar1"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"

                        />
                    <com.example.obdwifi.CompassView
                        android:id="@+id/speed_compass_pointer"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/camposs_ori" />
                    <TextView
                        android:id="@+id/speedshow"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="13dp"
                        android:text="0km/h"
                        android:textColor="#00ffff"
                        />
                </FrameLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1">

                <FrameLayout
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_gravity="right"
                    android:background="@mipmap/rpmbackground">
                    <com.example.obdwifi.RoundProgressBar
                        android:id="@+id/RPM_roundProgressBar1"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"

                        />
                    <com.example.obdwifi.CompassView
                        android:id="@+id/RPM_compass_pointer"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/camposs_ori" />
                    <TextView
                        android:id="@+id/RPM"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="13dp"
                        android:text="0rpm"
                        android:textColor="#00ffff"
                        />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="汽车速度"
                android:layout_weight="1"
                android:textColor="#EE0000"
                android:gravity="center"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="发动机转速"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="#EE0000" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1">

                <FrameLayout
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_gravity="center"
                    android:background="@mipmap/mafbackground">
                    <com.example.obdwifi.RoundProgressBar
                        android:id="@+id/MAFProgressBar"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"

                        />
                    <com.example.obdwifi.CompassView
                        android:id="@+id/MAFCompassView"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/camposs_ori" />
                    <TextView
                        android:id="@+id/airFlowTextView"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="13dp"
                        android:text="0g/s"
                        android:textColor="#00ffff"
                        />
                </FrameLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1">

                <FrameLayout
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_gravity="right"
                    android:background="@mipmap/camposs_bg">
                    <com.example.obdwifi.RoundProgressBar
                        android:id="@+id/MAPProgressBar"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"

                        />
                    <com.example.obdwifi.CompassView
                        android:id="@+id/MAPCompassView"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/camposs_ori" />
                    <TextView
                        android:id="@+id/MAPTextView"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="13dp"
                        android:text="0kPa"
                        android:textColor="#00ffff"
                        />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="质量空气流量"
                android:layout_weight="1"
                android:textColor="#EE0000"
                android:gravity="center"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="进气歧管压力"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="#EE0000" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1">

                <FrameLayout
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_gravity="center"
                    android:background="@mipmap/etcbackground">
                    <com.example.obdwifi.RoundProgressBar
                        android:id="@+id/ECTProgressBar"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"

                        />
                    <com.example.obdwifi.CompassView
                        android:id="@+id/ECTCompassView"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/camposs_ori" />
                    <TextView
                        android:id="@+id/ECTTextView"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="13dp"
                        android:text="0℃"
                        android:textColor="#00ffff"
                        />
                </FrameLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1">

                <FrameLayout
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_gravity="right"
                    android:background="@mipmap/tpositionbackground">
                    <com.example.obdwifi.RoundProgressBar
                        android:id="@+id/TPositionProgressBar"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"

                        />
                    <com.example.obdwifi.CompassView
                        android:id="@+id/TPositionCompassView"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/camposs_ori" />
                    <TextView
                        android:id="@+id/TPositionTextView"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="13dp"
                        android:text="0%"
                        android:textColor="#00ffff"
                        />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="发动机冷却液温度"
                android:layout_weight="1"
                android:textColor="#EE0000"
                android:gravity="center"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="节气门开度"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="#EE0000" />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
